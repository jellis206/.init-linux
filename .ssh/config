Host *
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_ed25519_l2l
  IdentityFile ~/.ssh/id_ed25519_pers

# VM host entry
Host l2lvm-dev1
  HostName l2lvm-dev1.leading2lean.com
  User jellis
  RequestTTY yes
  RemoteCommand exec zsh -l

